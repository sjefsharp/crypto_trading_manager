# Environment Variables
# Copy this file to .env and fill in your actual values

# Bitvavo API Configuration
BITVAVO_API_KEY=your_bitvavo_api_key_here
BITVAVO_API_SECRET=your_bitvavo_api_secret_here
BITVAVO_REST_URL=https://api.bitvavo.com/v2
BITVAVO_WS_URL=wss://ws.bitvavo.com/v2/

# Database Configuration
DATABASE_URL=sqlite:///./crypto_trading.db

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Crypto Trading Manager

# External APIs
FRED_API_KEY=your_fred_api_key_here
BLS_API_KEY=your_bls_api_key_here

# Logging
LOG_LEVEL=INFO

# Development
DEBUG=True
