# Environment Configuration
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration (Use PostgreSQL in production)
DATABASE_URL=postgresql://username:password@localhost:5432/crypto_trading
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Security Configuration (MUST BE CHANGED!)
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_32_CHAR_SECRET
ENCRYPTION_KEY=CHANGE_THIS_TO_A_SECURE_ENCRYPTION_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Bitvavo API Configuration (Required for live trading)
BITVAVO_API_KEY=your_production_api_key
BITVAVO_API_SECRET=your_production_api_secret

# Trading Configuration
TRADING_MODE=live
DRY_RUN_ENABLED=false
MAX_POSITION_SIZE=10000.0
DEFAULT_STOP_LOSS_PERCENTAGE=0.01
DEFAULT_TAKE_PROFIT_PERCENTAGE=0.03

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/crypto-trading/app.log
LOG_ROTATION=1 day
LOG_RETENTION=90 days

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=20

# Monitoring
HEALTH_CHECK_INTERVAL=10
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# External Services
REDIS_URL=redis://redis:6379/0
SENTRY_DSN=your_production_sentry_dsn

# CORS Origins (production domains)
ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com
