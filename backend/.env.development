# Environment Configuration
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Server Configuration
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=sqlite:///./crypto_trading.db
DATABASE_ECHO=false

# Security Configuration (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ENCRYPTION_KEY=your-encryption-key-change-this-too

# Bitvavo API Configuration (Optional - for live trading)
# BITVAVO_API_KEY=your_api_key_here
# BITVAVO_API_SECRET=your_api_secret_here

# Trading Configuration
TRADING_MODE=dry_run
DRY_RUN_ENABLED=true
MAX_POSITION_SIZE=1000.0
DEFAULT_STOP_LOSS_PERCENTAGE=0.02
DEFAULT_TAKE_PROFIT_PERCENTAGE=0.05

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# External Services (Optional)
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=your_sentry_dsn_here

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://localhost:3000,https://localhost:5173
